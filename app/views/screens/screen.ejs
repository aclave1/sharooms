<script>
  window.__SCREENDATA = <%- screendata%>;
</script>

<div ng-controller="MainController" class="col-xs-12 contain_height">
  <span class="alert alert-warning screen_number_title pull-right">Screen number:{{screenNum}}</span>
  <span class="alert alert-warning user_title pull-left">User: {{displayUserName}}</span>

  <div ng-if="displayImage" class="col-xs-8 screen_image_wrapper">
    <img  ng-src="/download?fd={{imageUrl}}"
          ng-style="imgdim"
          class="screen_image"
          alt="Image to display"/>
  </div>




    <div class="caption_area col-xs-4 pull-right">
        <h1>Captions:</h1>
        <div ng-class="{updated: caption.updated}" class="caption_entry" ng-repeat="caption in captions">{{caption.userName}}: {{caption.text}}</div>
    </div>

  <!--<img class="imagePlaceHolder" src="/app/assets/images/placeholder.jpg" width="" height= "" alt="" >-->
</div>
